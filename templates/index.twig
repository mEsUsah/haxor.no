{% extends "_layout/_layout" %}

{% block body %}
    {% set section = entry.section.handle %}
    {% switch section %}
        {% case 'home' %}
            {% include "_sections/_homepage.twig" %}
        {% case 'about' %}
            {% include "_sections/_about.twig" %}
        {% case 'articles' %}
            {% include "_sections/_article.twig" %}   
        {% case 'portfolio' %}
            {% include "_sections/_portfolio.twig" %}
        {% case 'course' %}
            {% include "_sections/_course.twig" %}
        {% default %}
            {% include "_sections/" ~ entry.section.handle ~ "/_index.twig" %}
    {% endswitch %}
{% endblock body %}
    