<div class="prefix2subnetting__container">
    <div class="portfolioTask__options">
        <div class="portfolioTask__optionbox">
            <h2>Difficulty selector</h2>
            <div>
                <input type="radio" name="prefix2netmask__level" id="prefix2netmask__level--1" value="3" >
                <label for="prefix2netmask__level--1">Level 1 (Class C Networks)</label>
            </div>
            <div>
                <input type="radio" name="prefix2netmask__level" id="prefix2netmask__level--2" value="2">
                <label for="prefix2netmask__level--2">Level 2 (Class B Networks)</label>
            </div>
            <div>
                <input type="radio" name="prefix2netmask__level" id="prefix2netmask__level--3" value="1">
                <label for="prefix2netmask__level--3">Level 3 (Class A Networks)</label>
            </div>
            <div>
                <input type="radio" name="prefix2netmask__level" id="prefix2netmask__level--3" value="0" checked>
