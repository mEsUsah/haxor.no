{% if block.threeNewest %}
    {% set books = craft.entries.section("books").orderBy("postDate  DESC").limit(3).all() %}
{% else %}
    {% set books = block.books.all() %}
{% endif %}

<div class="courseList__container">
    {% for book in books %}
        {% include "_content/_parts/_book.twig" %}
    {% endfor %}

    {% if block.linkToAll %}
        <a href="{{craft.entries().section('bookReviews').one().getUrl()}}" class="courseList__link">
            {{ 'List of all books I have reviewed'|t }}
        </a>
    {% endif %}
</div>