<article class="articleBody" 
    itemscope 
    itemtype="http://schema.org/Article" 
    author="{{ craft.users.one().fullName }}"
    datePublished="{{ entry.postDate|date('c') }}"
    dateModified="{{ entry.dateUpdated|date('c') }}"
    isFamilyFriendly="true">
    
    {% include "components/articleBanner.twig" with {
        entry: entry,
        showCategory: true,
        ctfWriteup: true
    } %}
    {% include "components/articleTeaser.twig" %}
    {% include "components/articleUpdated.twig" %}
    {% include "components/contentBlocks.twig" %}
</article>